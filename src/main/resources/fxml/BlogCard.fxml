<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="380.0" prefWidth="300.0"
      style="-fx-background-color: #ffffff; -fx-background-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.connexion3a8.controllers.BlogCardController">
    <children>
        <!-- Image -->
        <ImageView fx:id="blogImage" fitHeight="180.0" fitWidth="300.0" pickOnBounds="true"
                   preserveRatio="false" style="-fx-background-color: #f0f0f0;">
            <image>
                <Image url="@../img/default-blog.png"/>
            </image>
        </ImageView>

        <!-- Content -->
        <VBox prefHeight="200.0" prefWidth="300.0" spacing="10.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <children>
                <!-- Title -->
                <Text fx:id="blogTitre" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Titre du Blog" wrappingWidth="270.0"
                      style="-fx-fill: #2c3e50;">
                    <font>
                        <Font name="Montserrat Bold" size="16.0"/>
                    </font>
                </Text>

                <!-- Extrait -->
                <Text fx:id="blogExtrait" fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Extrait du blog..." wrappingWidth="270.0">
                    <font>
                        <Font name="Montserrat Regular" size="12.0"/>
                    </font>
                </Text>

                <!-- Date and Status -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="blogDate" text="27 Dec 2025" textFill="#999999">
                            <font>
                                <Font name="Montserrat Regular" size="11.0"/>
                            </font>
                        </Label>
                        <Label fx:id="blogStatus" text="● Publié" textFill="#4CAF50">
                            <font>
                                <Font name="Montserrat SemiBold" size="11.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="10.0">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                    <children>
                        <Button fx:id="viewBtn" onAction="#viewBlog" prefWidth="80.0"
                                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 5px; -fx-cursor: hand;"
                                text="Voir">
                            <font>
                                <Font name="Montserrat SemiBold" size="11.0"/>
                            </font>
                        </Button>
                        <Button fx:id="editBtn" onAction="#editBlog" prefWidth="80.0"
                                style="-fx-background-color: #f0f0f0; -fx-text-fill: #333; -fx-background-radius: 5px; -fx-cursor: hand;"
                                text="Modifier">
                            <font>
                                <Font name="Montserrat SemiBold" size="11.0"/>
                            </font>
                        </Button>
                        <Button fx:id="deleteBtn" onAction="#deleteBlog" prefWidth="80.0"
                                style="-fx-background-color: #dc284c; -fx-text-fill: white; -fx-background-radius: 5px; -fx-cursor: hand;"
                                text="Supprimer">
                            <font>
                                <Font name="Montserrat SemiBold" size="11.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>