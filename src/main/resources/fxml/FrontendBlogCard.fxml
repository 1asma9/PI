<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0"
      style="-fx-background-color: white; -fx-background-radius: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 5); -fx-cursor: hand;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.connexion3a8.controllers.FrontendBlogCardController"
      onMouseClicked="#openBlogDetail">
    <children>
        <!-- Blog Image -->
        <StackPane prefHeight="200.0" prefWidth="300.0"
                   style="-fx-background-radius: 15px 15px 0 0; -fx-background-color: #f0f0f0;">
            <children>
                <ImageView fx:id="blogImage" fitHeight="200.0" fitWidth="300.0"
                           pickOnBounds="true" preserveRatio="false"
                           style="-fx-background-radius: 15px 15px 0 0;">
                    <image>
                        <Image url="@../img/default-blog.png"/>
                    </image>
                </ImageView>
            </children>
        </StackPane>

        <!-- Blog Content -->
        <VBox prefHeight="200.0" prefWidth="300.0" spacing="12.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <!-- Title -->
                <Text fx:id="blogTitle" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Titre du Blog" wrappingWidth="260.0"
                      style="-fx-fill: #2c3e50;">
                    <font>
                        <Font name="Montserrat Bold" size="18.0"/>
                    </font>
                </Text>

                <!-- Excerpt -->
                <Text fx:id="blogExcerpt" fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Extrait du blog..." wrappingWidth="260.0">
                    <font>
                        <Font name="Montserrat Regular" size="13.0"/>
                    </font>
                </Text>

                <!-- Footer -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                    <children>
                        <Label fx:id="blogDate" text="27 Dec 2025" textFill="#999999">
                            <font>
                                <Font name="Montserrat Regular" size="11.0"/>
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Lire plus â†’" textFill="#667eea">
                            <font>
                                <Font name="Montserrat SemiBold" size="12.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>